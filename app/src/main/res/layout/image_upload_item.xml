<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="uploadModel"
            type="com.android.cattle360.data.apiResponse.DataImageDefaultView" />

    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/dimen_6_dp"
        app:cardCornerRadius="@dimen/dimen_6_dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/quantum_yellow50"
        android:padding="@dimen/dimen_8_dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/modelImage"
            coilFullCurvedLoader="@{}"
            android:layout_width="match_parent"
            android:src="@drawable/cow"
            android:layout_margin="@dimen/dimen_8_dp"
            android:layout_height="@dimen/dimen_100_dp"
            android:scaleType="centerCrop" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cameraButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{uploadModel.type}"
            android:textAllCaps="false"
            app:icon="@drawable/ic_camera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>